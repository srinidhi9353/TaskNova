{
  "version": 1,
  "services": [
    {
      "type": "web",
      "name": "tasknova-backend",
      "env": "node",
      "buildCommand": "npm install",
      "startCommand": "node server.js",
      "rootDir": "backend",
      "envVars": [
        {
          "key": "NODE_ENV",
          "value": "production"
        }
      ]
    }
  ]
}